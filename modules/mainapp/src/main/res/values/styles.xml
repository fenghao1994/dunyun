<resources>

    <style name="btn_normal">
        <item name="android:background">@drawable/login_btn_bg</item>
        <item name="android:paddingTop">16dip</item>
        <item name="android:paddingBottom">16dip</item>
        <item name="android:paddingLeft">15dip</item>
        <item name="android:paddingRight">15dip</item>
        <item name="android:textColor">@color/main_txt_color</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="tab_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">top|center</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginTop">6dp</item>
    </style>

    <style name="tab_item_txt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|center</item>
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="me_item_relativeLayout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/item_select_bg</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingBottom">12dip</item>
        <item name="android:paddingTop">12dip</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
    </style>
    <style name="me_item_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">4dip</item>
        <item name="android:layout_marginRight">8dip</item>
    </style>

    <style name="me_item_txt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="me_item_right">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:src">@drawable/right_icon</item>
    </style>

    <style name="item_right">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="me_item_right_checkbox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@drawable/checkbox_selector</item>
        <item name="android:button">@null</item>
    </style>

    <style name="me_item_right_checkbox2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@drawable/checkbox_selector_radio</item>
        <item name="android:button">@null</item>
    </style>

    <style name="passwd_right_checkbox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:button">@drawable/checkbox_passwd_selector</item>
    </style>

    <style name="me_item_sep">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:layout_marginLeft">40dip</item>
        <item name="android:layout_marginRight">0dip</item>
        <item name="android:background">@color/sep_color</item>
    </style>

    <style name="me_item_sep1">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:layout_marginLeft">0dip</item>
        <item name="android:layout_marginRight">0dip</item>
        <item name="android:background">@color/sep_color</item>
    </style>

    <style name="blue_btn_bg">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">40dip</item>
        <item name="android:layout_marginRight">40dip</item>
        <item name="android:background">@drawable/blue_btn_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingBottom">12dip</item>
        <item name="android:paddingTop">12dip</item>
    </style>
    <style name="blue_btn_bg1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/blue_btn_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingBottom">12dip</item>
        <item name="android:paddingTop">12dip</item>
    </style>

    <style name="orange_btn_bg">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">30dip</item>
        <item name="android:layout_marginRight">30dip</item>
        <item name="android:background">@drawable/orange_btn_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingBottom">12dip</item>
        <item name="android:paddingTop">12dip</item>
    </style>

    <style name="normal_edit_bg">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:paddingBottom">6dip</item>
        <item name="android:paddingTop">6dip</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/main_txt_color</item>
    </style>

    <style name="gate_edit_bg">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/gate_edit_bg</item>
        <item name="android:paddingBottom">8dip</item>
        <item name="android:paddingTop">8dip</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/main_txt_color</item>
    </style>

    <style name="passwd_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">6dip</item>
    </style>

    <style name="passwd_btn_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.3</item>
        <item name="android:paddingBottom">8dip</item>
        <item name="android:paddingTop">8dip</item>
        <item name="android:layout_margin">6dip</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/passwd_item_sharp</item>
    </style>

    <style name="passwd_btn_item1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.6</item>
        <item name="android:paddingBottom">8dip</item>
        <item name="android:paddingTop">8dip</item>
        <item name="android:layout_margin">6dip</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/passwd_item_sharp</item>
    </style>

    <style name="tab_title_sep">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">4dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/record_title_sep_color</item>
        <item name="android:textColor">@color/record_title_sep_color</item>
    </style>

    <style name="tab_title_sep1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">4dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/record_title_color</item>
        <item name="android:textColor">@color/record_title_color</item>
    </style>

    <style name="dunyunDialogStyle" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 对话框是否有遮盖 -->
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- activity 透明 -->
    <style name="myTransparent">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>

    <style name="AppTheme.Dialog" parent="android:Theme.Holo.Light.Dialog">
        <!-- 背景颜色及透明程度 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 是否有标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否模糊 -->
        <item name="android:backgroundDimEnabled">false</item>
    </style>
</resources>
