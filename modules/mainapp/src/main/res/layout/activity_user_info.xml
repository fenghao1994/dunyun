<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_color">
    <!--头像-->
    <RelativeLayout
        android:id="@+id/rl_photo"
        style="@style/me_item_relativeLayout">

        <TextView
            android:id="@+id/tv_photo"
            android:text="头像"
            style="@style/me_item_icon" />

        <net.dunyun.framework.android.mainapp.widget.RoundImageView
            android:id="@+id/photo_iv"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/me_photo" />
    </RelativeLayout>

    <TextView style="@style/me_item_sep1" />

    <!--昵称-->
    <RelativeLayout
        android:id="@+id/rl_nick"
        style="@style/me_item_relativeLayout">

        <TextView
            android:id="@+id/tv_nick_sib"
            style="@style/me_item_icon"
            android:text="昵称"/>

        <TextView
            android:id="@+id/tv_nick"
            style="@style/me_item_txt"
            android:layout_toRightOf="@id/tv_nick_sib"
            android:text="" />

        <ImageView android:id="@+id/right" style="@style/me_item_right" />

        <TextView
            android:id="@+id/tv_nick_name"
            android:layout_toLeftOf="@id/right"
            android:layout_marginRight="8dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""/>

    </RelativeLayout>
    <TextView style="@style/me_item_sep1" />
    <!--昵称-->
    <RelativeLayout
        android:id="@+id/rl_update_pwd"
        style="@style/me_item_relativeLayout">

        <TextView
            android:id="@+id/tv_update_pwd_sib"
            style="@style/me_item_icon"
            android:text="修改登录密码"/>

        <TextView
            android:id="@+id/tv_update_pwd"
            style="@style/me_item_txt"
            android:layout_toRightOf="@id/tv_update_pwd_sib"
            android:text="" />

        <ImageView style="@style/me_item_right" />

    </RelativeLayout>
    <TextView style="@style/me_item_sep1" />

    <Button
        android:id="@+id/btn_exit"
        android:layout_marginTop="160dip"
        style="@style/orange_btn_bg"
        android:text="退出登录"/>

</LinearLayout>