<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/topLayout"
        android:layout_width="fill_parent"
        android:background="@color/light_grey"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/left_sep"
            android:layout_width="14dip"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/title_left_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="12dip"
            android:layout_marginRight="5dip"
            android:src="@drawable/back_icon"
            android:background="@null"
            android:layout_toRightOf="@id/left_sep" />

        <TextView
            android:id="@+id/title_left_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="4.0dip"
            android:layout_toRightOf="@id/title_left_btn"
            android:text="    "
            android:textColor="@color/white"
            android:textSize="16.0sp" />

        <RelativeLayout
            android:id="@+id/right_two_btn_lay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dip" >

            <Button
                android:id="@+id/right_two_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/title_icon_msg"
                android:visibility="invisible"
                android:text="" />

            <TextView
                android:id="@+id/message_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:background="@drawable/msg_number"
                android:layout_alignRight="@id/right_two_btn"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:visibility="invisible" />
        </RelativeLayout>

        <Button
            android:id="@+id/right_one_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dip"
            android:layout_toLeftOf="@id/right_two_btn_lay"
            android:paddingLeft="14dip"
            android:paddingRight="14dip"
            android:text="" />

        <TextView
            android:id="@+id/title_center_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text=""
            android:textColor="@color/white"
            android:textSize="16.0sp" />
    </RelativeLayout>

</LinearLayout>