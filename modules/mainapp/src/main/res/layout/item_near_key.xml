<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="left">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:padding="6dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_key_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_marginLeft="6dip"
            android:layout_toRightOf="@id/ItemImageSep"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:singleLine="true"
            android:text="钥匙名称"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/cb_check"
            android:layout_marginRight="6dip"
            android:layout_alignParentRight="true"
            style="@style/me_item_right_checkbox2"/>

        <Button
            android:id="@+id/btn_set"
            android:layout_toLeftOf="@id/cb_check"
            android:background="@color/record_sep_color2"
            android:layout_centerVertical="true"
            android:text="设置距离"
            android:padding="8dip"
            android:layout_marginRight="8dip"
            android:textColor="@color/white"
            android:layout_width="80dip"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_rssi"
            android:text="-10"
            android:layout_marginRight="6dip"
            android:textColor="@color/grey"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/btn_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</RelativeLayout>