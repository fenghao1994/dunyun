<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/rl_area"
        style="@style/me_item_relativeLayout"
        android:gravity="center"
        android:layout_marginTop="10dip"
        android:weightSum="1">

        <TextView
            android:id="@+id/tv_area"
            style="@style/me_item_txt"
            android:layout_width="80dip"
            android:gravity="center"
            android:text="户主" />

        <EditText
            android:id="@+id/et_area"
            style="@style/gate_edit_bg"
            android:layout_width="160dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:layout_toRightOf="@id/tv_area"
            android:layout_weight="0.6"
            android:enabled="false"
            android:hint=""
            android:textSize="14sp" />

    </LinearLayout>

    <TextView style="@style/me_item_sep1" />

    <LinearLayout
        style="@style/me_item_relativeLayout"
        android:gravity="center"
        android:weightSum="1">

        <TextView
            android:id="@+id/tv_phone"
            style="@style/me_item_txt"
            android:layout_width="80dip"
            android:gravity="center"
            android:text="成员手机号" />

        <EditText
            android:id="@+id/et_phone"
            style="@style/gate_edit_bg"
            android:layout_width="160dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:layout_toRightOf="@id/tv_area"
            android:layout_weight="0.6"
            android:numeric="integer"
            android:hint="请输入被添加人手机号"
            android:textSize="14sp" />

    </LinearLayout>

    <TextView style="@style/me_item_sep1" />

    <TextView style="@style/me_item_sep1" />

    <Button
        android:id="@+id/btn_submit"
        style="@style/blue_btn_bg"
        android:layout_marginTop="40dip"
        android:text="添加" />
</LinearLayout>